        </nav>
        <div>
            <main>
                ${display_products()}
            </main>
        </div>
        <p><center><input type="submit" value="Click here to purchase" name="purchase_submit"></center></p>
    </form>
    <footer>
        <h1>~Stay Cherry~</h1>
    </footer>
</body>

</html>